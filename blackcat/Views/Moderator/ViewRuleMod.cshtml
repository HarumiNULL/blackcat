    ViewData["Title"] = "Ver Reglas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">ðŸ“‹ Reglas Aprobadas</h2>

    @if (!Model.Any())
