<div class="container py-4">
    <div class="row">
        <!-- Columna izquierda: foro -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary-custom text-center fw-bold">
                    Foro
                </div>
                <div class="card-body forum-posts p-4" style="height: 70vh; overflow-y: auto;">
                    @foreach (var msg in Model)
                    {
                        <div class="mb-4">
                            <div class="card p-3 border-start border-4 border-primary rounded-start" style="width: fit-content; max-width: 75%; background-color: #f8f9fa;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="fw-semibold">@msg.IdUsuarioNavigation.NombreU</span>
                                    <small class="text-muted">@msg.FechaI.ToString("g")</small>
                                </div>
                                <div class="mt-2">
                                    @msg.Descrip
                                </div>
                                <div class="mt-3">
                                    <form asp-action="BloquearUsuario" method="post" class="d-inline">
                                        <input type="hidden" name="idUsuario" value="@msg.IdUsuario"/>
                                        <button type="submit" class="btn btn-warning btn-sm">üîí Bloquear</button>
                                    </form>
                                    <form asp-action="Eliminar" method="post" class="d-inline ms-2">
                                        <input type="hidden" name="id" value="@msg.IdInfo"/>
                                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Columna derecha: reglas -->
        <div class="col-md-4">
            @if (ViewBag.Reglas != null && ViewBag.Reglas.Count > 0)
            {
                <div class="alert alert-warning shadow-sm">
                    <h5 class="fw-bold mb-3"><i class="bi bi-exclamation-triangle-fill"></i> Reglas del Foro</h5>
                    <ul class="mb-0">
                        @foreach (var regla in ViewBag.Reglas)
                        {
                            <li>@regla.Descrip</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
