@model blackcat.Models.viewModels.LibrosViewModel
@{
    ViewBag.Title = "Editar Libro";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <!-- Columna izquierda: Formulario -->
        <div class="col-md-6">
            <div class="p-4 rounded-4" style="background-color: #a8d9d2;">
                <div class="bg-white p-4 rounded-3 shadow-sm">
                    <h2 class="text-center mb-4 fw-bold">Editar Libro</h2>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-success">@ViewBag.Mensaje</div>
                    }

                    <form method="post" asp-controller="Admin" asp-action="ViewEditBook" enctype="multipart/form-data">
                        <div class="mb-3">
                            <input type="hidden" asp-for="IdL" />
                            <label asp-for="NombreL" class="form-label"></label>
                            <input asp-for="NombreL" class="form-control" placeholder="Ingrese nombre" required/>
                            <span asp-validation-for="NombreL" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Autor" class="form-label"></label>
                            <input asp-for="Autor" class="form-control" placeholder="Ingrese el nombre del autor" required />
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ArchivoForm" class="form-label"></label>
                            <input asp-for="ArchivoForm" class="form-control" accept=".pdf,.epub" required />
                            <span asp-validation-for="ArchivoForm" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripcion" required />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImagenForm" class="form-label"></label>
                            <input asp-for="ImagenForm" class="form-control"  accept="image/*" required />
                            <span asp-validation-for="ImagenForm" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white" style="background-color: #40a9a1;">Importar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Columna derecha: Vista previa de portada -->
        <div class="col-md-4">
            <div class="card p-3 shadow-sm text-center" style="margin-top: 150px;">
                <h5 class="mb-3 fw-bold">Vista previa de Portada</h5>
                <img id="imagen-preview" src="data:image;base64,@Convert.ToBase64String(Model.Foto!)" alt="Vista previa de la imagen" class="img-fluid border rounded" style="max-height: 300px; object-fit: contain;" />
            </div>
        </div>
    </div>
</div>

