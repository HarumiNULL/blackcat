@model List<blackcat.Models.viewModels.LibrosViewModel>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h3>Mis Libros Guardados</h3>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var libro in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(libro.Foto)" alt="Portada del libro" />
                        <div class="card-body">
                            <h5 class="card-title">@libro.NombreL</h5>
                            <p class="card-text">@libro.Autor</p>
                            <p class="card-text">@libro.Descripcion</p>
                            <a href="/ruta-descarga/@libro.Archivo" class="btn btn-primary">Descargar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No tienes libros en tu lista.</p>
    }
</div>