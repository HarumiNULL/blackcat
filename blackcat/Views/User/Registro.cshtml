@model blackcat.Models.viewModels.UserViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Registro";
}

<div class="d-flex justify-content-center align-items-center vh-99">
    <div class="p-4 rounded-4" style="background-color: #a8d9d2; width: 80%; max-width: 480px;">
        <div class="bg-white p-4 rounded-3 shadow-sm">
            <h2 class="text-center mb-4" style="font-weight: bold;">Registro</h2>

            <form method="post" asp-controller="User" asp-action="Registro">
                <div class="mb-3">
                    <label  asp-for="NombreU" class="form-label"></label>
                    <input class="form-control" asp-for="NombreU" placeholder="Ingrese nombre">
                </div>

                <div class="mb-3">
                    <label  class="form-label" asp-for="CorreoU"></label>
                    <input  class="form-control" asp-for="CorreoU" placeholder="Ingrese correo">
                </div>

                <div class="mb-3">
                    <label  class="form-label" asp-for="Cont"></label>
                    <input class="form-control" asp-for="Cont" placeholder="Ingrese contraseña">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn text-white" style="background-color: #40a9a1;">Registrarse</button>
                    <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>

            <div class="text-center mt-3 position-relative">
                <span>¿Ya tienes cuenta? </span><a asp-controller="User" asp-action="ViewLogin" class="text-primary">Inicia Sesión</a>
                <img src="~/icons/gato.ico" alt="gatito" style="width: 80px; position: absolute; bottom: -180%; right:-20%;">
            </div>
        </div>
 
    </div>
</div>

